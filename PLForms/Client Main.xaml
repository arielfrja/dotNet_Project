<Window x:Class="PLForms.Client_Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Main" Height="535" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Menu VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <MenuItem x:Name="Order" Header="Order" Click="OrderButton_Click" />
            <MenuItem x:Name="SeeMyOrders" Header="See My orders" Click="SeeMyOrders_Click" />
            <MenuItem x:Name="ExitToMainMenu" Header="Exit to main menu" Click="ExitToMainMenu_Click"  />
        </Menu>
        <Grid x:Name="Functions" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="0,21,0,0" Width="800" Height="484" >
            <Grid.Background>
                <ImageBrush ImageSource="Images/CleintAreaBackGround.png"/>
            </Grid.Background>
            <Button x:Name="OrderButton" Content="Order" HorizontalAlignment="Left" Margin="560,281,0,0" VerticalAlignment="Top" Width="160" Click="OrderButton_Click" Height="100"/>
            <Button x:Name="SeeMyButton" Content="See my orders" HorizontalAlignment="Left" Margin="80,281,0,0" VerticalAlignment="Top" Width="160" Click="SeeMyButton_Click" Height="100" RenderTransformOrigin="1.85,0.675"/>
        </Grid>
    </Grid>
</Window>
